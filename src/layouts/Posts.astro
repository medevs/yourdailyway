---
import { Image } from 'astro:assets';
import FormattedDate from '@components/FormattedDate.astro';
import config from '@config/config.json';
import { slugify } from '@utils/slug';
import PostCard from '@components/PostCard.astro';

const { posts } = Astro.props;

type PostType = {
  id: string;
  slug: string;
  body: string;
  collection: string;
  data: {
    title: string;
    description: string;
    heroImage: string;
    pubDate: Date;
    categories: string[];
    tags: string[];
    autors: string[];
  };
};
---

<div class="mx-auto grid grid-cols-1 gap-x-8 gap-y-16 md:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-2">
  {
    posts?.slice(0, config.site.pageSize).map((post: PostType) => (
      <PostCard post={post} />
    ))
  }
</div>
