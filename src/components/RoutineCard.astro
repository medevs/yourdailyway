---
const { person } = Astro.props;
---

<div class="relative flex w-full flex-row rounded-xl shadow-md">
  <div class="relative m-0 w-2/5 shrink-0 overflow-hidden rounded-xl rounded-r-none bg-clip-border">
    <img src={person.image} class="h-45 w-full object-cover" />
  </div>
  <div class="p-6">
    <h2
      class="mb-4 block font-sans text-3xl font-semibold uppercase leading-relaxed tracking-normal text-indigo-500 antialiased"
    >
      {person.name}
    </h2>
    <h3 class="text-blue-gray-900 mb-2 block font-sans text-2xl font-semibold leading-snug tracking-normal antialiased">
      {person.uniqueRoutine}
    </h3>
    <p class="mb-8 block font-sans text-base font-normal leading-relaxed text-gray-700 antialiased">
      {person.description}
    </p>
    <div class="px-6 py-4">
      <h3 class="text-bold mb-2 mr-2 inline-block text-lg">Optimized for:</h3>
      <span class="mb-2 mr-2 inline-block rounded-full bg-gray-200 px-3 py-1 text-sm font-semibold text-gray-700"
        >#productivity</span
      >
      <span class="mb-2 mr-2 inline-block rounded-full bg-gray-200 px-3 py-1 text-sm font-semibold text-gray-700"
        >#performance</span
      >
      <span class="mb-2 inline-block rounded-full bg-gray-200 px-3 py-1 text-sm font-semibold text-gray-700"
        ># Learning</span
      >
    </div>
    <a class="inline-block" href="#">
      <button
        class="flex select-none items-center gap-2 rounded-lg px-6 py-3 text-center align-middle font-sans text-xs font-bold uppercase text-indigo-500 transition-all hover:bg-indigo-500/10 active:bg-indigo-500/30 disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
        type="button"
      >
        Explore Routine
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          aria-hidden="true"
          class="h-4 w-4"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
        </svg>
      </button>
    </a>
  </div>
</div>
