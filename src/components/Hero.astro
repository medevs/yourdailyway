---
import config from '@config/config.json';
import social from '@config/social';
import HeroImg from './HeroImg.astro';

const socialItems = social.networks;
---

<section>
  <div class="mx-auto flex max-w-screen-lg items-center justify-center py-6 sm:pb-12">
    <div class="w-2/3 rounded-lg text-center">
      <h1 class="mb-8 text-5xl font-bold">
        {config.site.title}
      </h1>
      <p class="text-md mt-1.5 text-zinc-500 md:text-lg">
        {config.site.description}
      </p>
      <div class="flex justify-center space-x-5 pt-8">
        {
          socialItems?.map((item) => (
            <a href={item.url} target="_blank" rel="noopener noreferrer">
              <figure>
                <Fragment set:html={item.svg} />
              </figure>
            </a>
          ))
        }
      </div>
    </div>
    <div class="hidden w-1/3 sm:block">
      <HeroImg />
    </div>
  </div>
</section>
